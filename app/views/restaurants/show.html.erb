<div class="text-center">
<h1><%= @restaurant.name %></h1>
<h3><%= @restaurant.category %></h3>
<p><%= "Address: #{@restaurant.address}" %></p>
<p><%= "Phone Number: #{@restaurant.phone_number}" %></p>
<p>Rating: <%= @average %></p>

<%= link_to "Add Review", restaurant_reviews_path(@restaurant) %>

<p>Leave a Review (link or form)</p>

<%= link_to "Home page", restaurants_path, :class => "btn btn-default" %>

<p><strong>Reviews</strong></p>
<% @reviews.each do |r| %>
  <strong><%= r.rating %></strong>
  <br>
  <p><%= r.content %></p>
<% end %>

</div>
